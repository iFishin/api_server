{
    "extends": "../tsconfig.json",
    "compilerOptions": {
      "module": "CommonJS",
      "moduleResolution": "node",
      "types": ["node"],
      "baseUrl": "./",
      "paths": {
        "@utils/*": ["utils/*"],
        "@config/*": ["config/*"],
        "@controllers/*": ["controllers/*"],
        "@models/*": ["models/*"],
        "@routes/*": ["routes/*"],
        "@middlewares/*": ["middlewares/*"],
        "@services/*": ["services/*"],
        "@types/*": ["types/*"],
        "@tests/*": ["tests/*"]
      },
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "strict": true,
      "outDir": "../dist/server"
    },
    "include": [
      "./**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }