{
    "compilerOptions": {
      "target": "ES2020",
      "lib": ["ES2020"],
      "module": "CommonJS",
      "moduleResolution": "node",
      "types": ["node"],
      "baseUrl": "./",
      "paths": {
        "@utils/*": ["utils/*"],
        "@config/*": ["config/*"],
        "@controllers/*": ["controllers/*"],
        "@models/*": ["models/*"],
        "@routes/*": ["routes/*"],
        "@middlewares/*": ["middlewares/*"],
        "@services/*": ["services/*"],
        "@types/*": ["types/*"],
        "@tests/*": ["tests/*"]
      },
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "strict": true,
      "outDir": "../dist/server",
      "rootDir": "./",
      "declaration": false,
      "sourceMap": false,
      "noEmit": false
    },
    "include": [
      "./**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }